<metal:main metal:use-macro="load: master.pt">
    <metal:main metal:fill-slot="title">...</metal:main>

    <metal:main metal:fill-slot="head_custom">
        <link rel="stylesheet" href="static/login.css"/>
    </metal:main>

    <div metal:fill-slot="content">
         <div class="panel panel-default">
            <div class="panel-body">
                <table>
                    <form method="post" action="/login">
                        <tr>
                            <td colspan="2"><p tal:condition="exists: error" id="error">${error}</p></td>
                        </tr>
                        <tr>
                            <td>Käyttäjätunnus:<input type="text" name="username"></td>
                            <td>Salasana:<input type="password" name="password"></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" value="Kirjaudu sisään"></td>
                        </tr>
                    </form>
                </table>
            </div>
         </div>
    </div>

</metal:main>