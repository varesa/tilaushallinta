<metal:main metal:use-macro="load: master.pt">
    <metal:main metal:fill-slot="title">Tilauksen tiedot</metal:main>

    <metal:main metal:fill-slot="head_custom">
        <link rel="stylesheet" href="/static/lomake.css">
    </metal:main>

    <metal:main metal:fill-slot="content">
        <div class="panel panel-default">
            <div class="panel-body">
                <h2>Perustiedot</h2>
                <table id="table_lomake">
                    <form method="post">
                        <input type="hidden" name="data" value="perustiedot">

                        <input type="hidden" name="kohde_id" value="${kohde.id}">
                        <input type="hidden" name="kohde_uuid" value="${kohde.uuid}">

                        <tr>
                            <td><h3>Laskutus</h3></td> <td><h3>Työ</h3></td>
                        </tr>
                        <tr>
                            <td>Nimi:<br><input readonly name="kohde_nimi" value="${kohde.nimi}"></td>
                        </tr>
                        <tr>
                            <td>Yritys:<br><input readonly name="kohde_yritys"  value="${kohde.yritys}"></td>
                        </tr>
                        <tr>
                            <td>Y-tunnus:<br><input readonly name="kohde_ytunnus"  value="${kohde.ytunnus}"></td>
                        </tr>
                        <tr>
                            <td>Osoite:<br><input readonly name="kohde_osoite" value="${kohde.osoite}"></td>
                        </tr>
                        <tr>
                            <td>Postitoimipaikka:<br><input readonly name="kohde_postitoimipaikka" value="${kohde.postitoimipaikka}"></td>
                        </tr>
                        <tr>
                            <td>Postinumero:<br><input readonly name="kohde_postinumero" value="${kohde.postinumero}"></td>
                        </tr>
                        <tr>
                            <td>Puhelin:<br><input readonly name="kohde_puh" value="${kohde.puhelin}"></td>
                        </tr>
                        <tr>
                            <td>Sähköposti:<br><input readonly name="kohde_email" value="${kohde.email}"></td>
                        </tr>

                        <tr>
                            <td><input type="reset" value="Kumoa"><td><input type="submit" value="Päivitä"></td></td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </metal:main>
</metal:main>