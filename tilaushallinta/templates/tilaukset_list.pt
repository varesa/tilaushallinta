<metal:main metal:use-macro="load: master.pt">
    <metal:main metal:fill-slot="title">Tilauslista</metal:main>

    <metal:main metal:fill-slot="head_custom">

    </metal:main>

    <metal:main metal:fill-slot="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                Avoinna olevat tilaukset
            </div>
            <table class="table table-hover">
                <tr>
                    <td>#</td>
                    <td>Tilaaja</td>
                    <td>Kohteen osoite</td>
                </tr>
                <tr tal:repeat="tilaus tilaukset" onclick="alert('clicked')">
                    <td>${tilaus.id}&nbsp;&nbsp;&nbsp;</td>
                    <td>${tilaus.tilaaja.nimi}, ${tilaus.tilaaja.yritys}&nbsp;&nbsp;&nbsp;</td>
                    <td>${tilaus.kohde.osoite1} ${tilaus.kohde.osoite2}</td>
                </tr>
            </table>
        </div>

    </metal:main>
</metal:main>